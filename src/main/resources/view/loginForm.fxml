<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.effect.DropShadow?>
<?import javafx.scene.effect.GaussianBlur?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.shape.Rectangle?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="483.0" prefWidth="735.0" style="-fx-background-color: linear-gradient(to bottom right, #1e1e2f, #2d2d44);" xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="contraller.loginFormContraller">

    <children>
        <!-- Background Image -->
        <ImageView fitHeight="600.0" fitWidth="800.0" layoutX="-40.0" layoutY="-60.0" opacity="0.4" preserveRatio="false">
            <image>
                <Image url="@../image/login%20page.jpeg" />
            </image>
            <effect>
                <GaussianBlur radius="20.0" />
            </effect>
        </ImageView>

        <!-- Main Card -->
        <Rectangle arcHeight="20.0" arcWidth="20.0" fill="#ffffff15" height="400.0" layoutX="203.0" layoutY="70.0" width="355.0">
            <effect>
                <DropShadow color="#00000080" radius="15.0" />
            </effect>
        </Rectangle>

        <!-- Title -->
        <Label layoutX="272.0" layoutY="102.0" text="Thoga Kade" textFill="#ffffff">
            <font>
                <Font name="Segoe UI Bold" size="36.0" />
            </font>
        </Label>

        <!-- Subtitle -->
        <Label layoutX="295.0" layoutY="153.0" text="Welcome to our system" textFill="#cfcfcf">
            <font>
                <Font name="Segoe UI" size="15.0" />
            </font>
        </Label>

        <!-- Username -->
        <Label layoutX="261.0" layoutY="215.0" text="Username" textFill="#ffffff">
            <font>
                <Font name="Segoe UI Bold" size="15.0" />
            </font>
        </Label>
        <TextField fx:id="txtUserName" layoutX="261.0" layoutY="245.0" onAction="#btnuserName" prefHeight="36.0" prefWidth="239.0" style="-fx-background-color: rgba(255,255,255,0.2);                         -fx-text-fill: white;                         -fx-prompt-text-fill: #bbbbbb;                         -fx-background-radius: 10;                         -fx-border-color: white;                         -fx-border-radius: 10;                         -fx-border-width: 1;">
            <promptText>Enter your username</promptText>
        </TextField>

        <!-- Password -->
        <Label layoutX="261.0" layoutY="290.0" text="Password" textFill="#ffffff">
            <font>
                <Font name="Segoe UI Bold" size="15.0" />
            </font>
        </Label>
        <PasswordField fx:id="txtPassword" layoutX="261.0" layoutY="320.0" onAction="#btnpasswordAction" prefHeight="36.0" prefWidth="239.0" style="-fx-background-color: rgba(255,255,255,0.2);                             -fx-text-fill: white;                             -fx-prompt-text-fill: #bbbbbb;                             -fx-background-radius: 10;                             -fx-border-color: white;                             -fx-border-radius: 10;                             -fx-border-width: 1;">
            <promptText>Enter your password</promptText>
        </PasswordField>

        <!-- Login Button -->
        <Button layoutX="324.0" layoutY="385.0" mnemonicParsing="false" onAction="#btnLoginAction" prefHeight="36.0" prefWidth="120.0" style="-fx-background-color: linear-gradient(to right, #6a5acd, #836fff);                      -fx-text-fill: white;                      -fx-font-weight: bold;                      -fx-background-radius: 20;                      -fx-cursor: hand;" text="Login">
            <effect>
                <DropShadow color="#00000060" radius="10.0" />
            </effect>
        </Button>
    </children>
</AnchorPane>
